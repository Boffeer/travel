.hero
	position relative
	z-index 1
	margin-top 125px
	padding 335px 10px 196px
	height 950px
	width 100%
	background #96b1b4 url(../img/content/hero-bg.png) 0 0 no-repeat
	background-size cover
	text-align center
	color #ffffff
	&:before
		content ''
		display block
		position absolute
		z-index 0
		top 0
		left 0
		size(100%, 100%)
		background rgba(#96b1b4, 0.4)
	&-text
		position relative
		z-index 3
		max-width 100%
		margin 0 auto
	&__title
		font-size 68px
		latoBold()
		margin 0 0 24px 0
		text-transform uppercase
	&__descr
		arial()
		font-size 22px
		line-height 1.6
		margin 0 0 95px 0
	&__link
		display inline-block
		size(285px, 70px)
		padding 20px 41px
		color #ffffff
		latoBold()
		