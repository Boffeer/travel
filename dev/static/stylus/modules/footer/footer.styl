.footer
  flex 0 0 auto
  color greyColor
  background-color: #efeeee
  padding 100px 0
  &-wrap
  	margin 0 auto
	  max-width screenXL
 	&-bottom
 		display flex
 		border 1px solid #c9c9c9
 		height 485px
 	&-left
 		padding 45px 0 0 30px
 		size(585px, 485px)
 		border-right 1px solid #c9c9c9
 	&-logo
 		margin 0 0 28px 0
 	&__descr
 		margin 0 0 25px 0
 	&-contacts
 		font-size 15px
 		&__address
 			margin 0 0 12px 0
 			&:before
 				display inline-block
 				content url(../img/content/footer__map.png)
 				margin 0 18px 0 0
 		&__phone
 			margin 0 0 12px 0
 			&:before
 				display inline-block
 				content url(../img/content/footer__phone.png)
 				margin 0 18px 0 0
 		&__mail
 			margin 0 0 10px 0
 			&:before
 				display inline-block
 				content url(../img/content/footer__mail.png)
 				margin 0 18px 0 0
 		&__site
 			margin 0 0 33px 0
 			&:before
 				display inline-block
 				content url(../img/content/footer__web.png)
 				margin 0 18px 0 0
 	&-social
 		display flex
 		justify-content space-between
 		size(190px, 40px)
	 	&-bg
	 		display flex
	 		justify-content center
	 		align-items center
	 		background-color #c9c9c9
	 		size(40px, 40px)
	 		border none
	 		border-radius 3px
	 		&:hover
	 			background-color mainColor
.footer	 	
	&__title
 		text-align center
 		title()
 		color gray
 		margin 0 0 51px 0
	&-right
		size(585px)
		padding 38px 0 0 30px
	&__inputs
		border none
		border-bottom 1px solid #c9c9c9
		background-color footerColor
		margin 0 0 30px 0
		height 35px
		font-size 14px
		padding-bottom 10px
	&-form
		size(523px)
		display flex
		flex-direction column
		&__email
			padding-top 10px
		&__message
			height 125px
			margin-bottom 60px
			padding-top 10px